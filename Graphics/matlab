x0 = [-10, 10]
y0 = [-10, 10]
y0=0*x0;

x01 = [-10, 10]
y01 = [-10, 10]
y02 = [-10, 10]
y01 = x01*1
y02 = x01*-1



x = [0,3]
y1 = x*2;


plot(x, y1, 'r', x0, y0, 'b', y0, x0, 'b',x01, y01, 'g', x01, y02, 'g'),
axis([-10, 10, -10, 10]),grid on,axis equal



